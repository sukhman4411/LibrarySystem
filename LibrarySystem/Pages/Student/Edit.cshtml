@page
@model LibrarySystem.Pages.Student.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.ID" />
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.FatherName" class="control-label"></label>
                <input asp-for="Student.FatherName" class="form-control" />
                <span asp-validation-for="Student.FatherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Mobile" class="control-label"></label>
                <input asp-for="Student.Mobile" class="form-control" />
                <span asp-validation-for="Student.Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.AuthorID" class="control-label"></label>
                <select asp-for="Student.AuthorID" class="form-control" asp-items="ViewBag.AuthorID"></select>
                <span asp-validation-for="Student.AuthorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.BookID" class="control-label"></label>
                <select asp-for="Student.BookID" class="form-control" asp-items="ViewBag.BookID"></select>
                <span asp-validation-for="Student.BookID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
